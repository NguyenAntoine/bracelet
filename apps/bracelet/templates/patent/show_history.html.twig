{% extends 'base.html.twig' %}

{% block body %}
    <section class="uza-services-area section-margin-top-80 section-padding-80-0">
        <div class="container">
            <div class="row">
                <!-- Section Heading -->
                <div class="col-12">
                    <div class="section-heading text-center">
                        <h2>{{ patent.fullName }}</h2>
                        <a class="btn" href="{{ path('patent_edit', {'id': patent.id}) }}">
                            <i class="icon_plus mr-1"></i>Modifier
                        </a>
                        <a class="btn" href="{{ path('patent_show', {'id': patent.id}) }}">
                            <i class="icon_menu-circle_alt2"></i> Retour au détail
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Single Service Area -->
                <div class="col-12 col-lg-12">
                    <div class="single-service-area mb-80">
                        <table class="table table-striped table-bordered">
                            <tbody>
                            {% for medication in patent.medications %}
                                <tr>
                                    <th>{{ medication.patentMedication.drug.name }}
                                        - {{ medication.patentMedication.drug.type }}
                                        - {{ medication.patentMedication.drug.injectionType }}</th>
                                    <td>
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                            <tr>
                                                <th>Prise du médicament</th>
                                                <th>Date</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for medicationTaken in medication.medicationTaken %}
                                                <tr class="{% if not medicationTaken.taken %}bg-danger text-light{% endif %}">
                                                    <td>{{ medicationTaken.taken ? 'Pris' : 'Non pris' }}</td>
                                                    <td>Le {{ medicationTaken.takenAt|date('d/m/y à H:i') }}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
